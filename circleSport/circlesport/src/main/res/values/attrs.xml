<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="NiceImageView">
        <attr name="is_circle" format="boolean" />
        <attr name="is_cover_src" format="boolean" />
        <attr name="corner_radius" format="dimension" />
        <attr name="corner_top_left_radius" format="dimension" />
        <attr name="corner_top_right_radius" format="dimension" />
        <attr name="corner_bottom_left_radius" format="dimension" />
        <attr name="corner_bottom_right_radius" format="dimension" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="inner_border_width" format="dimension" />
        <attr name="inner_border_color" format="color" />
        <attr name="mask_color" format="color" />
    </declare-styleable>

    <declare-styleable name="AppBar">
        <attr name="width" format="dimension" />
        <attr name="height" format="dimension"/>
        <attr name="bg" format="color|reference"/>
        <attr name="left_arrow_hide" format="boolean"/>
        <attr name="left_arrow_is_white" format="boolean"/>
        <attr name="title_hide" format="boolean"/>
        <attr name="title_name" format="string"/>
        <attr name="right_set_hide" format="boolean"/>
        <attr name="right_set_name" format="string"/>
        <attr name="right_set_name_color" format="color"/>
        <attr name="bell_hide" format="boolean"/>
        <attr name="title_color" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="WaterWave">
        <attr name="waveType" format="integer" />
        <attr name="waveFillType" format="integer"/>
        <attr name="waveAmplitude" format="dimension"/>
        <attr name="startColor" format="reference|color|integer"/>
        <attr name="endColor" format="reference|color|integer"/>
        <attr name="angle" format="integer"/>
        <attr name="waveSpeed" format="float"/>
        <attr name="waveStartPeriod" format="float"/>
        <attr name="waveStart" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="PersonCenterView">
        <attr name="img" format="reference"/>
        <attr name="name_txt" format="string"/>
        <attr name="description" format="string"/>
    </declare-styleable>

    <declare-styleable name="WifiListViewItem">
        <attr name="name" format="string"/>
        <attr name="is_connected" format="boolean"/>
        <attr name="is_lock" format="boolean"/>
    </declare-styleable>
    
    <declare-styleable name="Circle">
        <attr name="radius" format="float|integer|dimension"/>
        <attr name="color" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="CircleSport">
        <attr name="circle_count" format="integer" />
        <attr name="sport_speed" format="integer" />
        <attr name="circle_color" format="integer|reference|color" />
        <attr name="circle_radius" format="dimension" />
    </declare-styleable>

</resources>